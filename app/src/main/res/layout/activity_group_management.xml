<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.junhosung.aquagroupwalkingapp.UI.GroupManagementActivity">

    <Button
        android:id="@+id/createGroupBtn"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="58dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="385dp"
        android:text="Create Group"
        app:layout_constraintBottom_toTopOf="@+id/changeGroups"
        app:layout_constraintEnd_toStartOf="@+id/modGroups"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewGroupName"
        android:layout_width="256dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:text="     Group Name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewMember"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:layout_marginBottom="261dp"
        android:layout_marginTop="88dp"
        android:text="Members"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/modGroups"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/modGroups"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginBottom="84dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Modify Groups"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/createGroupBtn"
        app:layout_constraintTop_toBottomOf="@+id/membersList" />

    <Button
        android:id="@+id/changeGroups"
        android:layout_width="133dp"
        android:layout_height="38dp"
        android:layout_marginBottom="16dp"
        android:text="Change Groups"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createGroupBtn" />

    <ListView
        android:id="@+id/membersList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="132dp"
        app:layout_constraintBottom_toTopOf="@+id/modGroups"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backToMapBtn"
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:text="Back to map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
